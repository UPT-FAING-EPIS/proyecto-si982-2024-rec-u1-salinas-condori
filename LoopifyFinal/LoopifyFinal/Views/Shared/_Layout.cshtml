<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="Sistema Loopify">
    <meta name="keywords" content="Loopify, gestión de alimentos, reducción de desperdicios">
    <title>Loopify</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.10.5/font/bootstrap-icons.min.css" rel="stylesheet">
    <style>
        body {
            font-family: 'Inter', sans-serif;
            margin: 0;
            padding: 0;
        }

        .wrapper {
            display: flex;
            min-height: 100vh;
        }

        #sidebar {
            width: 250px;
            background-color: #004d40;
            color: white;
            position: fixed;
            height: 100vh;
            overflow-y: auto;
            box-shadow: 2px 0px 5px rgba(0, 0, 0, 0.1);
        }

            #sidebar .sidebar-header {
                text-align: center;
                padding: 20px;
                background: #00332c;
            }

                #sidebar .sidebar-header img {
                    width: 80%;
                    height: auto;
                }

            #sidebar ul {
                list-style: none;
                padding: 0;
                margin: 0;
            }

                #sidebar ul li {
                    padding: 10px 20px;
                }

                    #sidebar ul li a {
                        text-decoration: none;
                        color: white;
                        font-weight: 600;
                        display: block;
                        border-radius: 5px;
                        padding: 10px 15px;
                        transition: background 0.3s ease;
                    }

                        #sidebar ul li a:hover {
                            background: #00796b;
                            color: white;
                        }

        .main {
            margin-left: 250px;
            flex: 1;
            display: flex;
            flex-direction: column;
            height: 100vh;
            overflow-y: auto;
        }

        .navbar {
            background-color: #00A79D;
            color: white;
            padding: 10px 20px;
        }

            .navbar h3 {
                margin: 0;
                color: white;
                font-size: 1.5rem;
            }

        .content {
            padding: 20px;
        }

        .footer {
            background: #f8f9fa;
            padding: 10px 20px;
            border-top: 1px solid #e9ecef;
            font-size: 0.9rem;
        }

            .footer a {
                color: #6c757d;
                text-decoration: none;
            }

                .footer a:hover {
                    text-decoration: underline;
                }
    </style>
</head>
<body>
    <div class="wrapper">
        <!-- Sidebar -->
        <nav id="sidebar">
            <div class="sidebar-header">
                <img src="~/Assets/LoppifyLogo.png" alt="Loopify Logo">
            </div>
            <ul>
                <li><a href="~/Home/Index"><i class="bi bi-house"></i> Inicio</a></li>
                @if (Session["UserRole"] != null && Session["UserRole"].ToString() == "Administrador")
                {
                    <li><a href="~/Administrador/Panel"><i class="bi bi-people"></i> Gestión de Vendedores</a></li>
                    <li><a href="~/Administrador/ResumenVentas"><i class="bi bi-bar-chart"></i> Resumen de Ventas</a></li>
                }
                @if (Session["UserRole"] != null && Session["UserRole"].ToString() == "Vendedor")
                {
                    <li><a href="~/Vendedor/Panel"><i class="bi bi-box"></i> Mis Productos</a></li>
                    <li><a href="~/Vendedor/CrearNegocio"><i class="bi bi-plus-circle"></i> Crear Negocio</a></li>
                    <li><a href="~/Vendedor/Horarios"><i class="bi bi-clock"></i> Configurar Horarios</a></li>
                    <li><a href="~/Vendedor/ResumenVentas"><i class="bi bi-bar-chart-2"></i> Resumen de Ventas</a></li>
                }
                @if (Session["UserRole"] != null && Session["UserRole"].ToString() == "Cliente")
                {
                    <li><a href="~/Cliente/Inicio"><i class="bi bi-cart"></i> Ofertas Disponibles</a></li>
                }
                <li><a href="~/Cuenta/CerrarSesion"><i class="bi bi-box-arrow-right"></i> Cerrar Sesión</a></li>
            </ul>
        </nav>

        <!-- Main Content -->
        <div class="main">
            <nav class="navbar">
                <h3>Loopify</h3>
            </nav>
            <main class="content">
                @RenderBody()
            </main>
            <footer class="footer text-center">
                <div class="container">
                    <div class="row">
                        <div class="col-12">
                            <p>© @DateTime.Now.Year Loopify - Todos los derechos reservados.</p>
                        </div>
                    </div>
                </div>
            </footer>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
